  </head>

  <body>
    <div id="page" class="container_12">
      
      <!-- Header Section -->
      <header>
        <div id="masthead" class="grid_5">
          <h1>$station.location</h1>
          <h2>Monthly Weather Summary</h2>
          <h3>$current.dateTime</h3>
        </div>

          <!-- INSERT YOUR WUNDERGROUND CODE HERE -->
